{
  "compilerOptions": {
    "allowSyntheticDefaultImports": false,
    "baseUrl": "src",
    "paths": {
      "@": ["src"],
      "components/*": ["./src/components/*"],
      "containers/*": ["./src/containers/*"],
      "router/*": ["./src/router/*"],
      "store/*": ["./src/store/*"],
      "modules/*": ["./src/modules/*"],
      "utils/*": ["./src/utils/*"],
      "theme/*": ["./src/theme/*"],
      "static/*": ["./src/static/*"]
    }
  },
  "exclude": ["node_modules", "dist", "public"]
}
